@model TaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>
<h4>Are you sure you want to delete this task?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Completed</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Yes" : "No")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
