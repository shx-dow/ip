@model IEnumerable<TaskManager.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
}

<h1>Task List</h1>
<a class="btn btn-primary mb-3" asp-action="Create">+ Add New Task</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.DueDate.ToShortDateString()</td>
            <td>@(task.IsCompleted ? "✅" : "❌")</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
